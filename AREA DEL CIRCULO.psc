Algoritmo circulo
	// variable de entrada
	Definir radio Como Real;
	// variable de salida
	Definir perimetro,area Como Real;
	// captura de datos
	Escribir 'escribir el radio del circulo';
	Leer radio;
	// Proceso 
	perimetro <- 2*PI*radio  ; 
	area <- PI*radio^2;
	// salida
	Escribir 'el perimetro del circulo es ',perimetro,' metros';
	Escribir 'el area del circulo es ',area,' metros cuadrados';
FinAlgoritmo
